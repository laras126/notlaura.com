{% extends 'base.twig' %}

{% block header %}
<header class="o-header l-page">
	<div class="o-blog-header">
		<div class="o-blog-header__content">
			<span class="meta-grey u-upperspace u-margin-b-0">Archive</span>
			<h1 class="u-margin-t-0">{{ term ? term.name : title }}</h1>
			{% if term.description %}
				<p>{{ term.description }}</p>
			{% endif %}
		</div>
	</div>
</header>
{% endblock %}


{% block content %}

	<ol class="o-tease-loop">
		{% for post in posts %}
			{% include 'teases/tease-post.twig' %}
		{% endfor %}
	</ol>

	<nav class="prevnext-nav">
		{% if pagination.next %}
			<a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">&larr; Older Posts</a>
		{% endif %}

		{% if pagination.prev %}
			<a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">Newer Posts &rarr;</a>
		{% endif %}
	</nav> <!-- /.pagination -->

{% endblock %}

{% block sidebar %}{% endblock %}