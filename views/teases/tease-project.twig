

<article tabindex="0" class="project {% if 'Featured' in post.get_terms('project-type') %} project-featured{% else %} project-not-featured{% endif %} fancy-hover" id="tease-{{post.ID}}">


  <div class="project-thumb">
    {# Note/TODO: using an image field for video here, or no video? #}
    {% if post.featured_media %}
      {% include "partials/srcset.twig" with { img: TimberImage(post.featured_media), class: 'long-thumb lazy-load' } %}
    {% else %}
      {% include "partials/srcset.twig" with { img: post.thumbnail, class: 'project-tease-img lazy-load' } %}
    {% endif %}
  </div>

  <div class="project-content">
    {# Don't show "Featured" #}
    <p class="project-types">{% for c in post.get_terms('project-type') %}{{ c.name != 'Featured' ? c.name }}{% endfor %}</p>
    <h4 class="project-tease-title">{% if not post.no_single %}<a href="{{post.link}}">{{post.title}}</a>{% else %}{{post.title}}{% endif %}</h4>
    <p class="project-tease-tagline lead">{{post.intro}}</p>
    <p class="project-tease-desc">{{post.para_intro}}</p>

    {% if post.no_single == false %}
      <p>
        <a class="link-more btn" href="{{post.link}}" title="{{post.title}}">{{'Featured' in post.get_terms('project-type') ? 'Read Case Study' : 'Details'}} <span class="more-arrow">&rarr;</span></a>
      </p>
    {% endif %}

    {% include "partials/edit-link.twig" %}
  </div>

</article>